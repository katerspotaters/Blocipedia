<h1>Edit Wiki</h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter new wiki title ..." %>
        <%= f.check_box :private, class: "checkbox" %>
      </div>
      <div class="form-group">
        <%= f.label "Edit Wiki" %>
        <%= f.text_area :body, rows: 20, class: "form-control", placeholder: "Enter wiki here ..." %>
      </div>
      <h5>Blocipedia accepts <a href="http://assemble.io/docs/Cheatsheet-Markdown.html">Markdown syntax</a></h5>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success" %>
      </div>
      <% end %>
  </div>
</div>
